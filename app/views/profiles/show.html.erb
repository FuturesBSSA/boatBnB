<div class="container">

  <div class="text-center">
    <h3>Personal info:</h3>
  </div>


  <div class="personal">

    <h4>First name:</h4>
    <li><%= current_user.first_name %></li>
    <h4>Last name:</h4>
    <li><%= current_user.last_name %></li>
    <h4>City:</h4>
    <li><%= current_user.city  %></li>
    <h4>Phone number:</h4>
    <li><%= current_user.phone_number %></li>
  </div>

  <h3>Your boats (<%= @boats.size %>):</h3>
  <% @boats.each do |boat| %>
  <%= link_to boat.name, owner_boat_path(boat) %>
  <% end %>

  <h3>Bookings (<%= @bookings.size %>):</h3>
  <% @bookings.each do |booking| %>
  <%= link_to booking.created_at, boat_booking_path(booking) %>
  <% end %>

</div>
