<div class="container">

  <h1><%= @boat.name  %></h1>
  <%= cl_image_tag @boat.photo, height: 300, width: 400, crop: :fill %>

  <h3>Details</h3>

  <h4>Owner:</h4>
  <%= @full_name %>
  <h4>Category:</h4>
  <%= @boat.category  %>
  <h4>Persons:</h4>
  <%= @boat.size  %>
  <h4>Price per day:</h4>
  <%= @boat.price  %>

  <%= link_to "Edit", edit_owner_boat_path(@boat), class: "btn btn-success" %>

  <%= link_to "Delete", owner_boat_path(@boat), class: "btn btn-danger",
  method: :delete,
  data: { confirm: "Are you sure?" } %>


</div>

<%= link_to "Back", profile_path, class: "btn btn-success" %>
